{
  "name": "codename-askellon",
  "version": "1.0.0",
  "description": "",
  "author": "Eonfuzz",
  "license": "MIT",
  "main": "src-ts/main.ts",
  "scripts": {
    "test": "tstl -p tsconfig.json --rootDir \"src-ts\" && node bin/operations build && node bin/operations run",
    "build": "tstl -p tsconfig.json --rootDir \"src-ts\" && node bin/operations build",
    "dev": "npm-watch",
    "build:defs": "node bin/operations gen-defs"
  },
  "watch": {
    "build:defs": {
      "patterns": [
        "./maps/map.w3x"
      ],
      "extensions": "lua",
      "legacyWatch": true
    }
  },
  "dependencies": {
    "convertjasstots": "latest",
    "fs-extra": "latest",
    "npm-watch": "^0.6.0",
    "typescript-to-lua": "^0.27.1",
    "war3tstlhelper": "^1.0.0"
  },
  "devDependencies": {
    "lua-types": "^2.6.1",
    "war3-types": "^1.0.1"
  }
}
