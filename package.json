    "build:defs": "node bin/operations gen-defs"
  },
  "devDependencies": {
    "@types/node": "^12.0.2",
    "fs-extra": "^8.1.0",
    "lua-types": "^2.6.1",
    "luamin": "^1.0.4",
    "npm-watch": "^0.6.0",
    "ts-transformer-imports": "^0.4.3",
    "typescript-to-lua": "^0.30.1",
    "war3-types": "^1.0.0",
    "war3tstlhelper": "^1.0.1"
  },
  "dependencies": {
    "w3ts": "^1.0.6"
  },
  "watch": {
    "build:defs": {
      "patterns": [
        "./maps/*"
      ],
      "extensions": "lua",
      "legacyWatch": true
    }
  }
}
